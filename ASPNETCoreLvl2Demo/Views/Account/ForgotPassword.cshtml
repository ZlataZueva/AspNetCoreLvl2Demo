@model ASPNETCoreLvl2Demo.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<h1>Forgot Password</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">User name or email address</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Get reset link" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>